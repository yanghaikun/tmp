<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
        <Logger name="AMS" level="debug" />
        <Logger name="DB" level="debug" />
    </Loggers>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/> -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} (%F:%M:%L) [%p][%c] %m%n"/>
        </Console>
        <RollingRandomAccessFile name="File" fileName="/log4j2/rlair/ams.log"
                                 filePattern="/log4j2/rlair/ams.log-%d{MM-dd-yyyy}-%i.log" >
            <PatternLayout>
                <charset>UTF-8</charset>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} (%F:%M:%L) [%p][%c] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 M"/>
            </Policies>
            <DefaultRolloverStrategy max="20" fileIndex="max"/>
        </RollingRandomAccessFile>
    </Appenders>
</Configuration>